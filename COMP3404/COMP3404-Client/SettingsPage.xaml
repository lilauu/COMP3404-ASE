<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:COMP3404_Client.Views"
             x:Class="COMP3404_Client.SettingsPage">
    <!-- Deep Purple Theme -->

    <Grid Padding="10" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main Content -->
        </Grid.ColumnDefinitions>

        <!-- Vertical Navigation Bar -->
        <controls:NavbarView Grid.Column="0"/>

        <!-- Main Content -->
        <Grid Grid.Column="1" RowDefinitions="Auto, *">
            <!-- Header -->
            <controls:HeaderView Grid.Row="0" Title="Profile Settings"/>

            <Grid Grid.Row="1" Padding="10" VerticalOptions="Start">
                <Button x:Name="LoginButton" Text="Log in with Github" BackgroundColor="#3A006D" FontSize="32" TextColor="White"
                        SemanticProperties.Hint="Github Login" Clicked="OnLoginClicked"/>
            </Grid>
            
            <Grid Grid.Row="1" Padding="10" VerticalOptions="Start">
                <CheckBox x:Name="EnabledCheckBox" CheckedChanged="EnabledCheckBox_CheckedChanged"/>
                <Slider Maximum="2" ValueChanged="VolumeSlider_ValueChanged"/>
                <Slider Maximum="2" ValueChanged="PitchSlider_ValueChanged"/>
            </Grid>


        </Grid>
    </Grid>
</ContentPage>