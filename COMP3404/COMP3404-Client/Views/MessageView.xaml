<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:COMP3404_Client.Views"
             x:Name="this"
             x:Class="COMP3404_Client.Views.MessageView"
             x:DataType="local:MessageView"
             BindingContext="{x:Reference this}"
             >
    <Frame BackgroundColor="{DynamicResource Background}" Padding="10" CornerRadius="15">
        <Label HorizontalTextAlignment="{Binding HorizontalTextAlignment}" Text="{Binding MessageText}" TextColor= "{DynamicResource Text}" FontSize="18"/>
    </Frame>
</ContentView>
