<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="Header"
             x:Class="COMP3404_Client.Views.HeaderView">

    <Grid BindingContext="{x:Reference Header}" Padding="10" ColumnDefinitions="Auto, *" 
                  VerticalOptions="Start" x:Name="topBar">
        <Image Source="profile_icon.png" HeightRequest="40" WidthRequest="40" 
                       SemanticProperties.Description="User Profile" Margin="10"/>
        <Label Text="{Binding Title}" FontSize="24" FontFamily="OpenSansRegular" 
                       VerticalTextAlignment="Center" x:Name="topBarLabel"/>
    </Grid>
</ContentView>
